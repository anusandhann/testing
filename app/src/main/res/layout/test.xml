<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme3"
    android:orientation="vertical"
    android:layout_gravity="center">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/sleepcard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/appTheme"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                 <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="190dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:text="@string/sleep"
                    android:textStyle="bold"

                    android:textColor="@color/buttonText"
                    android:textSize="22sp" />

                <ImageView
                    android:id="@+id/sleepimage"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"

                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="100dp"
                    card_view:srcCompat="@drawable/sll" />

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp">

                <com.github.mikephil.charting.charts.CandleStickChart
                    android:id="@+id/sleepLinechart"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    tools:ignore="NotSibling">

                </com.github.mikephil.charting.charts.CandleStickChart>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="205dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >

                    <ImageView
                        android:id="@+id/sleepstatusimage"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="0dp"
                        app:srcCompat="@drawable/currentstatusvector" />

                    <TextView
                        android:id="@+id/sleepstatusheader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="35dp"
                        android:text="@string/currentStatus"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" >
                    </Space>

                    <ImageView
                        android:id="@+id/sleeptimeheader"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="0dp"
                        app:srcCompat="@drawable/ic_baseline_timer_24"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/sleependtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="35dp"
                        android:text="@string/endtime"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" >
                    </Space>

                    <ImageView
                        android:id="@+id/sleephourglass"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="0dp"
                        app:srcCompat="@drawable/ic_baseline_hourglass_bottom_24"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/sleepduration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="35dp"
                        android:text="@string/duration"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="250dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    >

                    <TextView
                        android:id="@+id/sleepstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="18sp" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" >
                    </Space>

                    <TextView
                        android:id="@+id/sleeptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"

                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" >
                    </Space>

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>



