<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme3"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/sleepcard"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/trafficGreen"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/sleeprelativelayout">

                    <TextView
                        android:id="@+id/sleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="285dp"
                        android:layout_marginTop="5dp"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:text="Sleep"
                        android:textColor="@color/buttonText"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/sleepimage"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_below="@+id/sleep"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="19dp"
                        android:layout_marginEnd="9dp"
                        android:layout_marginBottom="100dp"
                        android:layout_alignTop="@id/sleep"
                        android:layout_toStartOf="@id/sleepLinechart"
                        card_view:srcCompat="@drawable/sll" />


                    <com.github.mikephil.charting.charts.CandleStickChart
                        android:id="@+id/sleepLinechart"
                        android:layout_width="280dp"
                        android:layout_height="190dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="100dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/sleepcard"
                        tools:ignore="NotSibling">

                    </com.github.mikephil.charting.charts.CandleStickChart>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="210dp"
                        android:layout_marginBottom="50dp"
                        >

                        <ImageView
                            android:id="@+id/sleepstatusimage"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            app:srcCompat="@drawable/currentstatusvector" />


                        <TextView
                            android:id="@+id/sleepstatusheader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:text="@string/currentStatus"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/sleeptimeheader"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            app:srcCompat="@drawable/ic_baseline_timer_24"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/sleependtime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:text="@string/endtime"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/sleephourglass"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="0dp"
                            app:srcCompat="@drawable/ic_baseline_hourglass_bottom_24"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/sleepduration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="35dp"
                            android:text="@string/duration"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/sleepstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="272dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/sleeptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="155dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="185dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_toStartOf="@id/sleepstatus"
                        android:layout_alignBaseline="@id/sleepstatus"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="265dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_toStartOf="@id/sleeptime"
                        android:layout_alignBaseline="@id/sleeptime"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

    <RadioGroup

        android:id="@+id/sleepbutton"
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/sleepnormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Normal" />

        <RadioButton
            android:id="@+id/sleepsuspicious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Suspicious" />

        <RadioButton
            android:id="@+id/sleepVerysuspicious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Very Suspicious" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/holo_red_light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>



