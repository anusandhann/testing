<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme3"
    android:orientation="vertical"
    android:layout_gravity="center">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/overallCard"
                android:layout_gravity="center"
                android:layout_width="375dp"
                android:layout_height="500dp"
                app:cardBackgroundColor="@color/appTheme"
                card_view:cardCornerRadius="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="375dp"
                    android:layout_height="170dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/overallCardHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="80dp"
                        app:layout_constraintBottom_toTopOf="@id/overallCardHeader"
                        android:text="@string/Overall"
                        android:textStyle="bold"
                        android:textColor="@color/buttonText"
                        android:textSize="30sp" />

                     <ImageView
                            android:id="@+id/overall"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:contentDescription="@string/todo"
                            android:textAlignment="center"
                            app:srcCompat="@drawable/management" />

                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:layout_marginTop="175dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/overallTextview"
                        android:layout_width="300dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="50dp"
                        android:fontFamily="sans-serif"
                        android:textAlignment = "center"
                        android:text="@string/OverallQuestion"
                        android:textColor="@color/buttonText"
                        android:textSize="30sp"
                        tools:ignore="NotSibling" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="320dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/overallLastResponseHeader"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/lastResponse"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                    <TextView
                            android:id="@+id/overallLastResponseTimeHeader"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="@string/lastResponseTime"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif"
                            android:textAlignment="viewStart"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="360dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/overallLastResponse"
                            android:layout_width="150dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif"
                            android:textAlignment="viewStart"
                            android:textColor="@color/buttonText"
                            android:layout_gravity="start"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/overallLastResponseTime"
                            android:layout_width="200dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="sans-serif"
                            android:textAlignment="viewStart"
                            android:layout_gravity="start"
                            android:textColor="@color/buttonText"
                            android:textSize="16sp" />
                    </LinearLayout>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>



